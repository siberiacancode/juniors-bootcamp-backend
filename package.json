{
  "name": "backend",
  "version": "1.0.0",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "dev": "npx @nestjs/cli start --watch",
    "build": "npx @nestjs/cli build",
    "docker-compose": "docker compose -p juniors-bootcamp-backend up --build",
    "dev-debug": "nest start --debug --watch",
    "prod": "node dist/main",
    "lint": "eslint . --fix",
    "stylelint": "stylelint \"src/static/**/*.css\" --fix",
    "format": "prettier --write \"**/*.(ts|js)\"",
    "pretty": "yarn format && yarn lint",
    "lint-inspector": "npx @eslint/config-inspector",
    "prisma-generate": "prisma generate",
    "prisma-deploy": "prisma migrate deploy",
    "prepare": "husky"
  },
  "dependencies": {
    "@apollo/server": "^4.11.3",
    "@nestjs/apollo": "^13.0.3",
    "@nestjs/axios": "^4.0.0",
    "@nestjs/common": "10.0.0",
    "@nestjs/config": "^4.0.1",
    "@nestjs/core": "10.0.0",
    "@nestjs/graphql": "^13.0.3",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/mapped-types": "2.1.0",
    "@nestjs/mongoose": "11.0.0",
    "@nestjs/passport": "^10.0.3",
    "@nestjs/platform-express": "^10.3.7",
    "@nestjs/platform-socket.io": "^10.3.7",
    "@nestjs/schedule": "^5.0.1",
    "@nestjs/serve-static": "^5.0.3",
    "@nestjs/swagger": "^7.4.2",
    "@nestjs/websockets": "^10.4.15",
    "@prisma/client": "^6.5.0",
    "@scalar/nestjs-api-reference": "^0.4.2",
    "axios": "^1.13.2",
    "bcrypt": "^5.1.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "generate-password": "^1.7.1",
    "graphql": "^16.10.0",
    "graphql-subscriptions": "^3.0.0",
    "hbs": "^4.2.0",
    "mongoose": "8.12.2",
    "nestjs-i18n": "^10.5.1",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "prisma": "^6.19.0",
    "reflect-metadata": "0.2.2",
    "rxjs": "^7.8.2",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@nestjs/cli": "11.0.10",
    "@nestjs/schematics": "^11.0.9",
    "@siberiacancode/eslint": "^2.13.0",
    "@siberiacancode/prettier": "^1.4.0",
    "@types/express": "^4.17.21",
    "@types/node": "24.10.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "prisma-dbml-generator": "^0.12.0",
    "source-map-support": "^0.5.21",
    "typescript": "^5.9.3"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write"
    ],
    "*.ts": [
      "prettier --write",
      "eslint --no-error-on-unmatched-pattern --fix"
    ]
  }
}
